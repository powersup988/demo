<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".MainActivity">

    <TextView
            android:id="@+id/user"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="用户名："
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="1dp"
            app:layout_constraintEnd_toStartOf="@+id/name" android:layout_marginBottom="1dp"
            app:layout_constraintTop_toTopOf="@+id/name" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="27dp" android:layout_marginStart="27dp"
            app:layout_constraintBottom_toBottomOf="@+id/name" android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"/>

    <EditText
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:layout_marginTop="121dp"
            app:layout_constraintStart_toEndOf="@+id/user" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="53dp"
            android:layout_marginRight="53dp"/>

    <TextView
            android:id="@+id/pass"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="密码："
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/password" app:layout_constraintBottom_toTopOf="@+id/password"
            app:layout_constraintTop_toTopOf="@+id/password" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="30dp" android:layout_marginStart="30dp" android:layout_marginEnd="31dp"
            android:layout_marginRight="31dp"/>

    <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberPassword"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/name" app:layout_constraintStart_toEndOf="@+id/pass"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="53dp"
            android:layout_marginRight="53dp"/>

    <Button
            android:id="@+id/sure_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="56dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/nosure_bt" android:layout_marginStart="56dp"/>

    <Button
            android:id="@+id/nosure_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="84dp"
            android:layout_marginRight="84dp" android:layout_marginBottom="249dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>